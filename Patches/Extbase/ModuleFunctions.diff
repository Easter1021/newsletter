+			$config['menuKey'],
+			$config['workspaces']
+		);
+
+			// Register additional Extbase information
+		$moduleConfig = array(
+			'name' => $moduleName,
+			'extensionKey' => $extensionKey,
+			'extensionName' => $extensionName,
+			'controllerActions' => $controllerActions,
+			'config' => $config,
+		);
